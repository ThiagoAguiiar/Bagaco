@model Ecommerce.Models.Usuario

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/menu.css">
    <link rel="stylesheet" href="~/css/acesso.css">
    <title>Bagaço - Cadastre-se</title>
</head>

<body>
    <header class="header">
        <a href="" id="logo">BAGAÇO</a>

        <div class="user-actions">
            <a href="~/home/index" class="nav-link">Página Inicial</a>
            <span class="divider"></span>
            <a href="~/usuario/login" class="nav-link">Entrar</a>
        </div>
    </header>

    <div class="container">

        <form method="post" asp-action="Cadastro" class="form">
            <div class="user">
                <p>Olá,</p>
                <span>Faça cadastro para obter acesso</span>
            </div>
            <div class="input">
                <div class="nome">
                    <label for="nome" class="lbl">Nome *</label>
                    <input type="text" name="nome" id="nome" required>
                </div>

                <div class="cpf">
                    <label for="cpf" class="lbl">CPF *</label>
                    <input type="text" name="cpf" id="cpf" required>
                </div>

                <div class="senha">
                    <label for="senha" class="lbl">Senha *</label>
                    <input type="password" name="senha" id="senha" required>
                </div>

                <div class="check">
                    <input type="checkbox" name="check" id="check">
                    <label for="check">Lembrar minha senha</label>
                </div>

                <div class="submit">
                    <input type="submit" value="Cadastre-se" class="enviar">
                </div>

                <div class="logar">
                    <span>Já possui uma conta? <a href="entrar.html">Acessar</a></span>
                </div>
            </div>
        </form>
        <p> @TempData["msg"]</p>
    </div>
</body>

</html>